{
    "Comment": "A state machine that runs nqueens.",
    "StartAt": "Get Input",
    "States": {
        "Get Input": {
            "Type": "Task",
            "Resource": "${MakeInputFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 15,
                    "MaxAttempts": 5,
                    "BackoffRate": 1.5
                }
            ],
            "Next": "Run N-Queens"
        },
        "Run N-Queens": {
            "Type": "Task",
            "Resource": "${RunNQueensFunctionArn}",
            "End": true
        }
    }
}
